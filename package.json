{
  "name": "telegram-dao-platform",
  "version": "1.0.0",
  "description": "A scalable, secure, real-time DAO system fully usable inside Telegram",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.ts --network arbitrum",
    "deploy:arbitrum": "hardhat ignition deploy ignition/modules/DAOPlatform.ts --network arbitrum --verify",
    "deploy:arbitrum-sepolia": "hardhat ignition deploy ignition/modules/DAOPlatform.ts --network arbitrumSepolia --verify",
    "deploy:ethereum-sepolia": "hardhat ignition deploy ignition/modules/DAOPlatform.ts --network ethereumSepolia --verify",
    "deploy:local": "hardhat ignition deploy ignition/modules/DAOPlatform.ts --network hardhat",
    "test": "hardhat test"
  },
  "dependencies": {
    "telegraf": "^4.12.2",
    "ethers": "^6.5.1",
    "firebase-admin": "^11.9.0",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.1.4",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.17",
    "typescript": "^5.1.3",
    "ts-node": "^10.9.1",
    "hardhat": "^2.25.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.9",
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@openzeppelin/contracts": "^4.9.0"
  },
  "keywords": [
    "telegram",
    "dao",
    "blockchain",
    "arbitrum",
    "web3"
  ],
  "author": "Your Name",
  "license": "MIT"
}